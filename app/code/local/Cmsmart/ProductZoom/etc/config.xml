<config>
    <modules>
        <Cmsmart_ProductZoom>
            <version>1.0.0</version>
        </Cmsmart_ProductZoom>
    </modules>
    <frontend>
        <layout>
            <updates>
                <cmsmart_productzoom module="cmsmart_productzoom">
                    <file>cmsmart_productzoom.xml</file>
                </cmsmart_productzoom>
            </updates>
        </layout>
    </frontend>
    <global>
        <models>
            <cmsmart_productzoom>
                <class>Cmsmart_ProductZoom_Model</class>
            </cmsmart_productzoom>
        </models>
        <blocks>
            <cmsmart_productzoom>
                <class>Cmsmart_ProductZoom_Block</class>
            </cmsmart_productzoom>
        </blocks>
        <helpers>
            <cmsmart_productzoom>
                <class>Cmsmart_ProductZoom_Helper</class>
            </cmsmart_productzoom>
        </helpers>
    </global>
    <default>
        <productzoom>
            <general>
                <enable>1</enable>
				<use_product_zoom>1</use_product_zoom>
                <position>inside</position>
				<lens_opacity>50</lens_opacity>
				<zoom_width>427</zoom_width>
				<zoom_height>275</zoom_height>
				<big_image_width>650</big_image_width>
                <big_image_height>650</big_image_height>
                <tint_opacity>50</tint_opacity>
				<soft_focus>0</soft_focus>
				<smooth_move>3</smooth_move>
            </general>
			<images>
				<main_width>364</main_width>
				<main_height>364</main_height>
				<thumbnail_width>65</thumbnail_width>
				<thumbnail_height>65</thumbnail_height>
			</images>
			<lightbox>
				<enable>1</enable>
				<max_width>95%</max_width>
				<max_height>95%</max_height>
				<group>1</group>
			</lightbox>
        </productzoom>
    </default>
</config>
