<?php
/**
 * Currency switcher
 *
 * @see Mage_Directory_Block_Currency
 */
?>
<?php if($this->getCurrencyCount()>1): ?>

	<?php
		$selectedCurrency;
		$out = '<ul>';
		foreach ($this->getCurrencies() as $_code => $_name)
		{
			if($_code == $this->getCurrentCurrencyCode())
			{
				$selectedCurrency = $_code;
				$out .= '<li class="current">'. $_code .' - '. $_name .'</li>';
			}
			else
				$out .= '<li><a href="'. $this->getSwitchCurrencyUrl($_code) .'">'. $_code .' - '. $_name .'</a></li>';
		}
		$out .= '</ul>';
    ?>

    <div class="dropdown-button currency-switcher item item-right">
    	<div class="inner">
			<p class="label hide-below-768"><?php echo $this->__('Currency'); ?>:</p>
			<p class="text"><?php echo $selectedCurrency; ?></p>
        </div>
        <?php echo $out; ?>
    </div>
<?php endif; ?>
